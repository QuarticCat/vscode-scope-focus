{
  "name": "scope-focus",
  "displayName": "Scope Focus",
  "description": "Yet another implementation of IntelliJ's scopes",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "scope-focus.switchScope",
        "title": "Switch Scope",
        "category": "Scope Focus"
      }
    ],
    "configuration": {
      "title": "Scope Focus",
      "properties": {
        "scope-focus.activeScope": {
          "type": [
            "null",
            "string"
          ],
          "default": null,
          "markdownDescription": "Scope currently in use. Set to `null` to turn off."
        },
        "scope-focus.scopes": {
          "type": "object",
          "default": {},
          "description": "Scope definitions.",
          "additionalProperties": {
            "type": "object",
            "description": "A scope definition.",
            "properties": {
              "include": {
                "type": "array",
                "markdownDescription": "[Glob patterns](https://aka.ms/vscode-glob-patterns) to include.",
                "items": {
                  "type": "string"
                }
              },
              "exclude": {
                "type": "array",
                "markdownDescription": "[Glob patterns](https://aka.ms/vscode-glob-patterns) to exclude.",
                "items": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "check-types": "tsc --noEmit",
    "lint": "eslint src"
  },
  "dependencies": {
    "glob": "^11.0.0"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.93.0",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "esbuild": "^0.23.1",
    "eslint": "^9.9.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.5.4"
  },
  "prettier": {
    "printWidth": 120
  }
}
